<h1>Sign Up</h1>


<%= form_for :user do |f| %>
  <%= f.text_field :email, placeholder: "Email" %>
  <%= f.text_field :name, placeholder: "Username" %>
  <%= f.password_field :password, placeholder: "Password"%>
  <%= f.submit "Sign Up"%>
<% end %>

<%= link_to "Back", root_path, class: "btn btn-success glyphicon glyphicon-chevron-left" %>



